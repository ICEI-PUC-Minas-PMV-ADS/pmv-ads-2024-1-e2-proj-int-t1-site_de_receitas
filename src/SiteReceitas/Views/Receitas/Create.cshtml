@model SiteReceitas.Models.Receita

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar Receita</h1>

<h4>Receita</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Imagem" class="control-label"></label>
                <input type="file" name="imagem" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NomeReceita" class="control-label"></label>
                <input asp-for="NomeReceita" class="form-control" />
                <span asp-validation-for="NomeReceita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModoPreparo" class="control-label"></label>
                <input asp-for="ModoPreparo" class="form-control" />
                <span asp-validation-for="ModoPreparo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IngredienteId" class="control-label"></label>
                <select asp-for="IngredienteId" class ="form-control" asp-items="ViewBag.IngredienteId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-info">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
