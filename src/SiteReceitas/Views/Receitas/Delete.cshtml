@model SiteReceitas.Models.Receita

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir Receita</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Receita</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeReceita)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeReceita)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ModoPreparo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModoPreparo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ingrediente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ingrediente.NomeIngrediente)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a class="btn btn-info" asp-action="Index">Voltar</a>
    </form>
</div>
